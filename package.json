{
	"name": "ghg-emissions-viewer",
	"version": "0.1.0",
	"scripts": {
		"serve": "vue-cli-service serve",
		"build": "vue-cli-service build",
		"lint": "vue-cli-service lint"
	},
	"dependencies": {
		"d3": "^5.15.0",
		"vue": "^2.6.11",
		"vue-router": "^3.1.6",
		"vuex": "^3.1.2"
	},
	"devDependencies": {
		"@vue/cli-plugin-babel": "^3.12.1",
		"@vue/cli-plugin-eslint": "^3.12.1",
		"@vue/cli-service": "^4.2.3",
		"@vue/eslint-config-standard": "^3.0.5",
		"chroma-js": "^1.4.1",
		"node-sass": "^4.13.1",
		"sass-loader": "^7.3.1",
		"vue-template-compiler": "^2.6.11"
	},
	"private": true,
	"eslintConfig": {
		"root": true,
		"env": {
			"node": true
		},
		"extends": [
			"plugin:vue/essential",
			"@vue/standard"
		],
		"rules": {
			"quotes": "off",
			"space-before-function-paren": "off",
			"no-trailing-spaces": "off"
		},
		"parserOptions": {
			"parser": "babel-eslint"
		}
	},
	"postcss": {
		"plugins": {
			"autoprefixer": {}
		}
	},
	"browserslist": [
		"> 1%",
		"last 2 versions",
		"not ie <= 8"
	]
}
